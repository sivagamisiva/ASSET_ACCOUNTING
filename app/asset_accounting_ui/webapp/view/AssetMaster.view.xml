<mvc:View
    controllerName="asset_accounting.ui.controller.AssetMaster"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page title="{i18n>assetMasterTitle}" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="assetsTable" items="{/Assets}">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>assetMasterTitle}"/>
                        <ToolbarSpacer/>
                        <Button text="{i18n>btnCreate}" icon="sap-icon://add" press=".onCreateAsset"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="{i18n>colAssetName}"/></Column>
                    <Column><Text text="{i18n>colAssetType}"/></Column>
                    <Column><Text text="{i18n>colAcquisitionValue}"/></Column>
                    <Column><Text text="{i18n>colStatus}"/></Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press=".onPressAsset">
                        <cells>
                            <Text text="{assetName}"/>
                            <Text text="{assetType}"/>
                            <Text text="{acquisitionValue}"/>
                            <Text text="{status}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
