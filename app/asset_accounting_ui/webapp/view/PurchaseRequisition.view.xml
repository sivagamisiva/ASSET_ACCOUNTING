<mvc:View
    controllerName="asset_accounting.ui.controller.PurchaseRequisition"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page title="{i18n>prTitle}" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="prTable" items="{/PurchaseRequisitions}">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>prTitle}"/>
                        <ToolbarSpacer/>
                        <Button text="{i18n>btnCreatePR}" icon="sap-icon://add" press=".onCreatePR"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="PR ID"/></Column>
                    <Column><Text text="Quantity"/></Column>
                    <Column><Text text="Cost"/></Column>
                    <Column><Text text="Status"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{prId}"/>
                            <Text text="{quantity}"/>
                            <Text text="{estimatedCost}"/>
                            <Text text="{status}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
