<mvc:View
    controllerName="asset_accounting.dashboard.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <App id="app">
        <pages>
            <Page title="{i18n>appTitle}" backgroundDesign="List">
                <content>
                    <VBox class="sapUiSmallMargin">
                        <Panel headerText="Asset Management" width="auto" class="sapUiResponsiveMargin">
                            <GenericTile header="Asset Master" subheader="Manage Assets" press=".onNavigate"
                                url="/asset_master/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://money-bills" />
                                </TileContent>
                            </GenericTile>
                        </Panel>

                        <Panel headerText="Asset Procurement" width="auto" class="sapUiResponsiveMargin">
                            <GenericTile header="Purchase Requisition" subheader="Create PR" press=".onNavigate"
                                url="/purchase_requisition/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://cart" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile header="Purchase Order" subheader="Manage POs" press=".onNavigate"
                                url="/purchase_order/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://sales-order" />
                                </TileContent>
                            </GenericTile>
                        </Panel>

                        <Panel headerText="Approvals" width="auto" class="sapUiResponsiveMargin">
                            <GenericTile header="PO Approval" subheader="Pending Approvals" press=".onNavigate"
                                url="/po_approval/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://approvals" />
                                </TileContent>
                            </GenericTile>
                        </Panel>

                        <Panel headerText="Asset Receipt &amp; Invoice" width="auto" class="sapUiResponsiveMargin">
                            <GenericTile header="Goods Receipt" subheader="Receive Goods" press=".onNavigate"
                                url="/goods_receipt/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://supplier" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile header="Invoice Receipt" subheader="Process Invoices" press=".onNavigate"
                                url="/invoice_receipt/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://receipt" />
                                </TileContent>
                            </GenericTile>
                        </Panel>

                        <Panel headerText="Asset Accounting" width="auto" class="sapUiResponsiveMargin">
                            <GenericTile header="Depreciation Run" subheader="Execute Depreciation" press=".onNavigate"
                                url="/depreciation_run/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://line-chart" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile header="Asset Retirement" subheader="Retire Assets" press=".onNavigate"
                                url="/asset_retirement/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://decline" />
                                </TileContent>
                            </GenericTile>
                            <GenericTile header="Legacy Asset" subheader="Migration" press=".onNavigate"
                                url="/legacy_asset/webapp/index.html">
                                <TileContent>
                                    <ImageContent src="sap-icon://history" />
                                </TileContent>
                            </GenericTile>
                        </Panel>
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
